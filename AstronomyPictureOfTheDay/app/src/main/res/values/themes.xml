<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AstronomyPictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_sky</item>
        <item name="colorPrimaryVariant">@color/dark_space</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_orange_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_view_style">
        <item name="android:gravity">center</item>
        <item name="fontFamily">roboto</item>
        <item name="color">@color/main_color</item>
    </style>

    <style name="regular_text_view_style" parent="text_view_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="small_text_view_style" parent="text_view_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="big_text_view_style" parent="text_view_style">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="main_button_style">
        <item name="backgroundTint">@color/main_color</item>
        <item name="android:textColor">@color/main_background</item>
        <item name="rippleColor">@color/main_background</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/main_background</item>
        <item name="android:textColorPrimary">@color/main_color</item>
        <item name="buttonBarButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">roboto</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/accent</item>
    </style>


</resources>