<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_photo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:backgroundTint="@color/item_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_photo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/top_photo_image_description"
                android:scaleType="centerCrop"
                tools:src="@drawable/placeholder_200x200" />

            <TextView
                android:id="@+id/top_photo_tv"
                style="@style/regular_text_view_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The title" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/star_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_star"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>